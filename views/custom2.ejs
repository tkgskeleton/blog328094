    gap: 10px;
    overflow-y: auto;
}

.character-select {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 15px;
    width: 95%;
    max-width: 1200px;
    /* Prevent scrolling inside the menu selector */
    max-height: none;
    overflow: visible;
}

/* Non-intrusive marker for modules that failed init (no visible text) */
.module-init-error {
    outline: 2px dashed rgba(255,0,0,0.06);
}

/* End inlined styles.css */
